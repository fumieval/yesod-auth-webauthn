executable yesod-webauthn-example
  main-is: example.hs
  ghc-options: -Wall -O2 -Wcompat
  build-depends:
      yesod-core
    , base >=4.7 && <5
    , yesod-auth
    , shakespeare
    , text
    , http-conduit
    , warp
    , warp-tls
    , wai-extra
    , yesod-auth-webauthn
    , yesod-form
    , webauthn
